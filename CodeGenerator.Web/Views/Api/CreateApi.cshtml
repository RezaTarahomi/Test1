@model CreateApiViewModel

@using Database.Data.Entities


<div class="card mb-3">
    <div class="card-header bg-light">
        <div class="row flex-between-center">
            <div class="col-sm-auto">
                <h5 class="mb-2 mb-sm-0"> ایجاد Api</h5>
            </div>
        </div>
    </div>
    <div class="card-body ">
        <div class="mb-3">

            <form id="create" asp-controller="Api" asp-action="CreateApi" method="post">
                <input asp-for="Id" type="hidden" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="d-flex align-items-center justify-content-start my-3">
                        <div id="bulk-select-replace-element">
                            <button class="btn btn-success"
                                    type="submit">
                                <span data-fa-transform="shrink-3 down-2"></span><span class="ms-1">ثبت</span>
                            </button>
                        </div>
                        <div id="bulk-select-replace-element">
                            <a class="btn btn-warning" href="@Url.Action("Index")">
                                <span data-fa-transform="shrink-3 down-2"></span><span class="ms-1">بازگشت</span>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="mb-3 row form-group">

                    <div class="col-md-4 form-group">
                        <label asp-for="Domains" class="form-label"></label>
                        <select asp-for="Domains" class="form-select" asp-items="@Html.GetEnumSelectList<Domains>()" aria-label="Default select example">
                            <option selected="">انتخاب کنید...</option>
                        </select>
                    </div>

                    <div class="col-md-4 form-group">
                        <label asp-for="ApiType" class="form-label"></label>
                        <select asp-for="ApiType" class="form-select" asp-items="@Html.GetEnumSelectList<ApiType>()" aria-label="Default select example" >
                            <option selected="">انتخاب کنید...</option>
                        </select>
                    </div>
                 

                    <div class="col-md-4">
                        <label asp-for="Name" class="form-label"></label>
                        <div>
                            <input asp-for="Name" class="form-control" />
                        </div>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Url" class="form-label"></label>
                        <div>
                            <input asp-for="Url" class="form-control" />
                        </div>
                    </div>




                </div>
            </form>

          
        </div>

    </div>
</div>

